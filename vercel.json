{
  "version": 2,
  "builds": [
    {
      "src": "server/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/routes.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/dist/public/assets/$1"
    },
    {
      "src": "^/favicon.(svg|png|ico)",
      "dest": "/dist/public/favicon.$1"
    },
    {
      "src": "^/manifest.json",
      "dest": "/dist/public/manifest.json"
    },
    {
      "src": "^/apple-touch-icon.png",
      "dest": "/dist/public/apple-touch-icon.png"
    },
    {
      "src": "^/og-image.png",
      "dest": "/dist/public/og-image.png"
    },
    {
      "src": "^/(.*)\\.(.+)$",
      "dest": "/dist/public/$1.$2"
    },
    {
      "src": "^/.*",
      "dest": "/dist/public/index.html"
    }
  ]
} 